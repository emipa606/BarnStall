<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ++++++++++++++++++++++++++++++++BarnStall++++++++++++++++++++++++++++++++ -->
  <ThingDef ParentName="FurnitureBase">
    <defName>BarnStall</defName>
    <label>barn stall</label>
    <description>A stall for your barn animals. Fits any animal.</description>
    <rotatable>true</rotatable>
    <pathCost>40</pathCost>
    <castEdgeShadows>true</castEdgeShadows>
    <graphicData>
      <texPath>Things/Building/BarnStall</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2.1,2.1</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>75</costStuffCount>
    <size>(2,2)</size>
    <thingClass>Building_Bed</thingClass>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.25</fillPercent>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <passability>PassThroughOnly</passability>
    <surfaceType>Item</surfaceType>
    <building>
      <bed_humanlike>false</bed_humanlike>
      <bed_showSleeperBody>true</bed_showSleeperBody>
      <bed_healPerDay>10</bed_healPerDay>
    </building>
    <statBases>
      <MaxHitPoints>140</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToMake>600</WorkToMake>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>0.95</Comfort>
      <Mass>20</Mass>
      <ImmunityGainSpeedFactor>1.5</ImmunityGainSpeedFactor>
    </statBases>
  </ThingDef>
</Defs>